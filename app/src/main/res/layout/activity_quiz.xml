<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".QuizActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/brain" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#FFC107"
        android:backgroundTint="#FFC107"
        android:text="How are you?"
        android:textAlignment="center"
        android:textColor="#0B0A0A"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnOp1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:text="Option 1"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOp2"
        app:layout_constraintEnd_toEndOf="@+id/tvQuestion"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/tvQuestion"
        app:layout_constraintTop_toBottomOf="@+id/tvQuestion" />

    <Button
        android:id="@+id/btnOp2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Option 2"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOp3"
        app:layout_constraintEnd_toEndOf="@+id/btnOp1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnOp1"
        app:layout_constraintTop_toBottomOf="@+id/btnOp1" />

    <Button
        android:id="@+id/btnOp3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Option 3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnOp4"
        app:layout_constraintEnd_toEndOf="@+id/btnOp2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnOp2"
        app:layout_constraintTop_toBottomOf="@+id/btnOp2" />

    <Button
        android:id="@+id/btnOp4"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Option 4"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnOp3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/btnOp3"
        app:layout_constraintTop_toBottomOf="@+id/btnOp3" />


</androidx.constraintlayout.widget.ConstraintLayout>